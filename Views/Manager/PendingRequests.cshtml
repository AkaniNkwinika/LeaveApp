@model IEnumerable<LeaveApp.Models.LeaveRequest>

<h2>Pending Requests</h2>
<table class="table">
    <tr><th>Employee</th><th>Start</th><th>End</th><th>Action</th></tr>
    @foreach (var l in Model)
    {
        <tr>
            <td>@l.Employee.FullName</td>
            <td>@l.StartDate.ToShortDateString()</td>
            <td>@l.EndDate.ToShortDateString()</td>
            <td>
                <a href="@Url.Action("Approve", new { id = l.Id })" class="btn btn-success">Approve</a>
                <a href="@Url.Action("Reject", new { id = l.Id })" class="btn btn-danger">Reject</a>
            </td>
        </tr>
    }
</table>
